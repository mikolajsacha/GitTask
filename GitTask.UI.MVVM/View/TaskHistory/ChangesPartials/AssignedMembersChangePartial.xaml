<UserControl x:Class="GitTask.UI.MVVM.View.TaskHistory.ChangesPartials.AssignedMembersChangePartial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:designTaskHistory="clr-namespace:GitTask.UI.MVVM.Design.TaskHistory"
             xmlns:elements="clr-namespace:GitTask.UI.MVVM.View.Elements"
             xmlns:ignore="http://www.galasoft.ch/ignore"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prop="clr-namespace:GitTask.UI.MVVM.Properties"
             d:DataContext="{d:DesignInstance Type=designTaskHistory:DesignAssignedMembersChangeViewModel,
                                              IsDesignTimeCreatable=True}"
             mc:Ignorable="d ignore">
    <TextBlock Text="{x:Static prop:Resources.ChangedAssignedMembers}">
        <TextBlock.ToolTip>
            <ToolTip>
                <StackPanel Orientation="Vertical">
                    <Grid Visibility="{Binding AnyMembersRemoved, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <TextBlock Text="{x:Static prop:Resources.RemovedProjectMembers}" />
                        <ItemsControl Margin="0,2,0,2" ItemsSource="{Binding AddedMembers, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <elements:InitialsBadge Margin="2,0,2,0" DataContext="{Binding Mode=OneWay}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                    <Grid Visibility="{Binding AnyMembersAdded, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <TextBlock Text="{x:Static prop:Resources.AddedProjectMembers}" />
                        <ItemsControl Margin="0,2,0,2" ItemsSource="{Binding RemovedMembers, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <elements:InitialsBadge Margin="2,0,2,0" DataContext="{Binding Mode=OneWay}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>
            </ToolTip>
        </TextBlock.ToolTip>
    </TextBlock>
</UserControl>