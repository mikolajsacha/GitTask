<ScrollViewer x:Class="GitTask.UI.MVVM.View.Elements.SelectTaskStatePartial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:design="clr-namespace:GitTask.UI.MVVM.Design"
        mc:Ignorable="d ignore"
        VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MaxHeight="500"
        d:DataContext="{d:DesignInstance Type=design:DesignSelectTaskStateViewModel, IsDesignTimeCreatable=True}">

    <ListBox SelectionMode="Single"
             SelectedItem="{Binding SelectedTaskState, Mode=TwoWay}"
             ItemsSource="{Binding AllTaskStates, Mode=OneWay}">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="1">
                    <Border Width="10" Height="10" CornerRadius="3" Margin="0,1,5,0" Background="{Binding Color, Mode=OneWay}"/>
                    <TextBlock Text="{Binding Name, Mode=OneWay}" FontSize="13" Margin="0,1,0,1"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</ScrollViewer>
