<Window x:Class="GitTask.UI.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:mainView="clr-namespace:GitTask.UI.MVVM.View.Main"
        mc:Ignorable="d ignore"
        Height="{StaticResource WindowHeight}"
        MinHeight="250"
        MinWidth="300"
        Width="{StaticResource WindowWidth}"
        Title="{StaticResource AppTitle}"
        DataContext="{Binding MainViewModel, Source={StaticResource Locator}, Mode=OneWay}"
        Background="LightGray">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding TaskStateColumns, Mode=OneWay}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <mainView:TaskStateColumnPartial DataContext="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
